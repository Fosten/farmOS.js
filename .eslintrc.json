{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "implicit-arrow-linebreak": "off",
    "arrow-parens": "off",
    "no-underscore-dangle": "off",
    "import/extensions": "off",
    "no-warning-comments": "warn"
  },
  "ignorePatterns": ["dist/**"],
  "overrides": [
    {
      "files": ["test/**"],
      "rules": {
        "strict": "off",
        "no-unused-expressions": "off",
        "func-names": "off"
      }
    }
  ]
}
